<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sections.sections.repoInformationObtainment.view.RepoInfoObtainmentActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/githubUserTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:hint="@string/text_input_layout_hint"
        app:hintTextAppearance="?android:textAppearanceSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchProfileTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="username"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingEnd="@dimen/padding_56dp"
            android:textSize="@dimen/text_input_edit_text_text_size"
            tools:ignore="RtlSymmetry"
            tools:targetApi="o" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/searchIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/githubUserTextInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/githubUserTextInputLayout"
        app:layout_constraintTop_toTopOf="@+id/githubUserTextInputLayout"
        app:srcCompat="@drawable/ic_search"
        tools:ignore="ContentDescription" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userInfoCardView"
        style="@style/MarginViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        app:cardElevation="@dimen/elevation_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/githubUserTextInputLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="@dimen/user_avatar_size"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_octocat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/userName"
                style="@style/ViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                app:layout_constraintBottom_toTopOf="@+id/userBio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                app:layout_constraintTop_toTopOf="@+id/userAvatar" />

            <TextView
                android:id="@+id/userBio"
                style="@style/ViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_bio"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/userFollowers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <TextView
                android:id="@+id/userFollowers"
                style="@style/ViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/number_of_followers"
                app:layout_constraintBottom_toTopOf="@+id/userRepos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                app:layout_constraintTop_toBottomOf="@+id/userBio" />

            <TextView
                android:id="@+id/userRepos"
                style="@style/ViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/number_of_repositories"
                app:layout_constraintBottom_toBottomOf="@+id/userAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                app:layout_constraintTop_toBottomOf="@+id/userFollowers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/repositoryLoadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="invisible" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userInfoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfoCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>